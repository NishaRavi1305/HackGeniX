# Environment Configuration
# Copy this file to .env and fill in the values

# ============= Application =============
APP_NAME=AI_Interviewer
APP_ENV=development
DEBUG=true
LOG_LEVEL=INFO

# ============= Server =============
HOST=0.0.0.0
PORT=8000

# ============= MongoDB =============
MONGODB_URI=mongodb://localhost:27017
MONGODB_DB_NAME=interview_system

# ============= Redis =============
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ============= S3/MinIO Storage =============
S3_ENDPOINT_URL=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_NAME=interview-system
S3_REGION=us-east-1

# ============= JWT Authentication =============
JWT_SECRET_KEY=your-super-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# ============= Model Providers =============
# Override config/models.yaml settings via env vars
# PROVIDER_LLM_MODEL=meta-llama/Llama-3.1-8B-Instruct
# PROVIDER_EMBEDDINGS_MODEL=BAAI/bge-large-en-v1.5
# PROVIDER_STT_MODEL=large-v3
# PROVIDER_TTS_PROVIDER=coqui-xtts

# ============= vLLM (if using) =============
VLLM_API_URL=http://localhost:8001/v1
VLLM_API_KEY=

# ============= Ollama (if using) =============
OLLAMA_API_URL=http://localhost:11434

# ============= Feature Flags =============
ENABLE_VOICE_PIPELINE=true
ENABLE_TTS_CACHE=true
ENABLE_AUDIO_LOGGING=false
